<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="@dimen/small_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_summary_item_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintHeight_percent=".65"
            app:layout_constraintBottom_toTopOf="@id/btn_summary_add_to_cart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".3"
            tools:src="@drawable/phone_place_holder" />

        <TextView
            android:id="@+id/tv_summary_item_title"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".4"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/iv_summary_item_image"
            app:layout_constraintTop_toTopOf="@id/iv_summary_item_image"
            tools:text="Title" />
        <!-- https://stackoverflow.com/questions/6153587/how-can-i-decrease-the-size-of-ratingbar-->
        <RatingBar
            android:id="@+id/rb_summary_order_item"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:isIndicator="true"
            android:rating="2.5"
            style="@style/Widget.AppCompat.RatingBar.Small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_summary_item_title"
            app:layout_constraintTop_toTopOf="parent"
            tools:rating="2.5" />

        <TextView
            android:id="@+id/tv_summary_order_item_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".3"
            app:layout_constraintStart_toEndOf="@id/iv_summary_item_image"
            app:layout_constraintTop_toBottomOf="@id/tv_summary_item_title"
            app:layout_constraintWidth_percent=".4" />

        <TextView
            android:id="@+id/tv_summary_order_item_price"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".17"
            app:layout_constraintStart_toEndOf="@id/iv_summary_item_image"
            app:layout_constraintTop_toBottomOf="@id/tv_summary_order_item_detail"
            app:layout_constraintWidth_percent=".4" />

        <Button
            android:id="@+id/btn_summary_add_to_cart"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/add_to_cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".2"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/btn_summary_add_to_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rb_summary_order_item"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintStart_toEndOf="@id/tv_summary_order_item_detail"
            app:layout_constraintWidth_percent=".3">


            <ImageView
                android:id="@+id/btn_order_plus"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_plus" />

            <TextView
                android:id="@+id/tv_order_item_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/btn_order_minus"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_subtract" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>